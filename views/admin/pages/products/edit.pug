extends ../../layout/default.pug
include ../../mixins/alert.pug 
include ../../mixins/select-tree.pug 

block main
    if(role.permissions.includes("products_edit"))
        +alert-error(5000)
        +alert-success(5000)
        h1(class="mb-4") EDIT PRODUCT


        form(
            action=`${prefixAdmin}/products/edit/${product.id}?_method=PATCH`
            id="form-edit-product"
            method="POST"
            enctype="multipart/form-data"
        )
            div(class="form-group")
                label(for="title") Title
                input(
                    type="text"
                    class="form-control"
                    id="title"
                    name="title"
                    required
                    value = product.title
                )
            div(class="form-group")
                label(for="product_category_id") Category  
                select(
                    name="product_category_id"
                    id="product_category_id"
                    class="form-control"
                )
                    option(value="") -- Choose category --
                    if(category)
                        +select-tree(category,1,product_category_id)
            //- div(class="form-group form-check form-check-inline")
            //-     input(
            //-             type="radio"
            //-             class="form-check-input"
            //-             id="featured1"
            //-             name="featured"
            //-             value="1"
            //-     )
            //-     label(for="featured1" class="form-check-label") Remarkable
            //- div(class="form-group form-check form-check-inline")
            //-     input(
            //-         type="radio"
            //-         class="form-check-input"
            //-         id="featured0"
            //-         name="featured"
            //-         value="0"
            //-         checked
            //-     )
            //-     label(for="featured0" class="form-check-label") Không
            div(class="form-group")
                label(for="desc") Description
                textarea(
                    class="form-control textarea-mce"
                    id="desc"
                    name="description"
                    rows="5"

                ) #{product.description}

                
        
            div(class="form-group")
                label(for="price") Price
                input(
                    type="number"
                    class="form-control"
                    id="price"
                    name="price"
                    value= product.price
                    min="0"
                )
            div(class="form-group")
                label(for="discount") % Discount
                input(
                    type="number"
                    class="form-control"
                    id="discount"
                    name="discountPercentage"
                    value= product.discountPercentage
                    min="0"
                )
            div(class="form-group")
                label(for="stock") Amount
                input(
                    type="number"
                    class="form-control"
                    id="stock"
                    name="stock"
                    value= product.stock
                    min="0"
                )
                
            div(
                class="form-group"
                upload-image
            )
                label(for="thumbnail") Image
                input(
                    type="file" 
                    class="form-control-file"
                    id="thumbnail"
                    name="thumbnail"
                    accept="image/*"
                    upload-image-input
                )
                img(
                    src=product.thumbnail
                    class="image-preview"
                )
            div(class="form-group")
                label(for="position") Position
                input(
                    type="number"
                    class="form-control"
                    id="position"
                    name="position"
                    placeholder="Tự động tăng"
                    min="1"
                    value = product.position
                )
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusActive"
                    name="status"
                    value="active"
                    checked =(product.status == "active" ? true : false)
                )
                label(for="statusActive" class="form-check-label") Active
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusInActive"
                    name="status"
                    value="inactive"
                    checked =(product.status == "inactive" ? true : false)
                )
                label(for="statusInActive" class="form-check-label") Inactive
            div(class="form-group")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Update
            
            script(src="/admin/js/product.js")