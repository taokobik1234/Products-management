extends ../../layout/default.pug 
include ../../mixins/box-head.pug


block main 
    
    .container.my-3 
        .row 
            .col-12 
                +box-head(pageTitle)

        .row 
            .col-12 
                div(class="alert alert-success") Congratulations on your successful order. Orders are being processed as soon as possible

        if(order)
            .row 
                .col-12 
                    h4(class="mb-2") Personal information
                    table(class="table table-bordered")
                        tbody 
                            tr 
                                td Fullname 
                                td 
                                    b #{order.userInfo.fullName} 
                            tr 
                                td Phone number 
                                td 
                                    b #{order.userInfo.phone} 
                            tr 
                                td Address 
                                td 
                                    b #{order.userInfo.address}

            .row 
                .col-12 
                    h4(class="mb-2") Order information
                    table(class="table table-bordered")
                        thead 
                            tr 
                                th No 
                                th Image 
                                th Name 
                                th Price 
                                th Amount 
                                th Total price 
                            
                        tbody 
                            if(order.products.length > 0)
                                each item,index in order.products
                                    tr 
                                        td #{index+1}
                                        td 
                                            img(src=item.productInfo.thumbnail alt=item.productInfo.title width="80px")
                                        td #{item.productInfo.title}      
                                        td #{item.price}$
                                        td #{item.quantity}
                                        td #{item.totalPrice}$
                        
                if(order.products.length > 0)
                    h3(class="text-right") Total order: #{order.totalPrice}$